/* pages/home/home.wxss */
.get_user_info {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.get_user_info_box {
  position: absolute;
  top: 50%;
  left: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  transform: translate(-50%, -50%);
  padding: 30rpx 10rpx;
  height: 210rpx;
  width: 500rpx;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
  font-size: 38rpx;
  line-height: 42rpx;
}
.get_user_info_box > button {
  font-size: 34rpx;
  margin-top: 45rpx;
  background-color:rgb(96, 192, 96);
  line-height: 2;
}

.header {
  width: 100%;
  padding: 0 24rpx;
  padding-top: 40rpx;
  background-color: #fff;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.header_top {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.user_icon {
  width: 70rpx;
  height: 70rpx;
  box-sizing: border-box;
  border-radius: 35rpx;
  overflow: hidden;
  position: absolute;
  top: 16rpx;
  left: 24rpx;
}

.blog_icon {
  width: 240rpx;
  height: 70rpx;
}

.header_nav {
  width: 100%;
  height: 90rpx;
}

.nav_item {
  width: 50%;
  height: 90rpx;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.nav_text {
  font-size: 38rpx;
  color: #666;
  z-index: 100;
}

.nav_choose {
  width: 35%;
  height: 20rpx;
  position: absolute;
  bottom: 20rpx;
  background-color: #e6c690;
}

.totop, .search, .addNew {
  width: 88rpx;
  height: 88rpx;
  padding: 22rpx;
  box-sizing: border-box;
  border-radius: 44rpx;
  background-color: #626262;
  position: fixed;
  right: 36rpx;
}

.totop {
  bottom: 252rpx;
}

.search {
  bottom: 146rpx;
}

.addNew {
  bottom: 40rpx;
}

.icon_contain {
  width: 44rpx;
  height: 44rpx;
}

.son_blog, .son_plan {
  width: 82rpx;
  height: 82rpx;
  padding: 21rpx;
  box-sizing: border-box;
  border-radius: 41rpx;
  background-color: #888;
  position: absolute;
}

.son_blog {
  left: -104rpx;
  top: 8rpx;
}

.son_plan {
  left: -210rpx;
  top: 8rpx;
}

.addNew_son {
  width: 40rpx;
  height: 40rpx;
}

.blog_list {
  margin-top: 260rpx;
  padding-bottom: 30rpx;
}

.blog_item {
  width: 692rpx;
  height: auto;
  margin: 30rpx auto;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #fff;
}

.blog_image {
  width: 100%;
  height: 320rpx;
  overflow: hidden;
}

.blog_image>image {
  width: 100%;
}

.blog_intro {
  width: 100%;
  height: 360rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.blog_title {
  width: 100%;
  height: auto;
}

.title_text {
  font-size: 32rpx;
}

.blog_content {
  width: 100%;
  height: 156rpx;
  margin-top: 10rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.content_text {
  font-size: 28rpx;
  color: #959595;
}

.blog_bottom {
  width: 100%;
  height: 50rpx;
  margin-top: 30rpx;
}

.blog_autor {
  width: auto;
  height: 50rpx;
  display: flex;
  align-items: center;
  float: left;
}

.autor_head {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.autor_head>image {
  width: 100%;
  height: 100%;
}

.autor_name {
  width: auto;
  height: auto;
  margin-left: 8rpx;
}

.name_text {
  font-size: 24rpx;
  color: #959595;
}

.blog_date {
  width: auto;
  height: 50rpx;
  float: right;
}

.date_text {
  font-size: 24rpx;
  color: #959595;
}

.load,
.blog_empty {
  width: 100%;
  margin-top: 320rpx;
  margin-bottom: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}