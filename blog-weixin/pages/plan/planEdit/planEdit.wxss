/* pages/plan/planEdit/planEdit.wxss */
.edit_box {
    width: 100%;
    height: auto;
    padding: 40rpx;
    box-sizing: border-box;
    /* display: flex;
    flex-direction: column; */
}
.plan_title, .plan_text {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.plan_title {
    margin-bottom: 40rpx;
}
.title_input {
    width: auto;
    text-align: center;
    font-size: 52rpx;
    line-height: 2em;
    letter-spacing: 0.1em;
}
.plan_text {
    min-height: 100rpx;
    position: relative;
}
.text_input, .text_input_view {
    font-size: 36rpx;
    line-height: 1.6em;
    text-indent: 2em;
    text-align: justify;
}
.text_input_view {
    visibility: hidden;
    word-break: break-all;
    word-wrap: break-word;
}
.text_input {
    width: 100%;
   height: 100%; 
   position: absolute;
   left:0;
   top:0;
   overflow-y: hidden;
   word-break: break-all;
   word-wrap: break-word;
}
.plan_operate {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
}
.plan_alert, .plan_finnish {
    flex-grow: 1;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    color: #333;
    background-color: #91b5c7;
}
.plan_alert {
    border-left: 2rpx solid #aaa;
}
