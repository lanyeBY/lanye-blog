/* pages/plan/planRead/planRead.wxss */

.read_box {
    margin-bottom: 100rpx;
    padding: 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.plan_top {
    width: 100%;
    font-size: 52rpx;
    line-height: 1.5em;
    letter-spacing: 0.1em;
    display: flex;
    align-items: center;
    justify-content: center;
}

.plan_status {
    height: 36rpx;
    padding: 8rpx 30rpx 4rpx 12rpx;
    margin-top: 30rpx;
    margin-left: 8rpx;
    align-self: flex-start;
    display: inline-block;
    font-size: 28rpx;
    line-height: 1em;
    letter-spacing: 0;
    position: relative;
}

.plan_status::after {
    content: "";
    white-space: nowrap;
    position: absolute;
    top: 8rpx;
    left: 106rpx;
    width: 34rpx;
    height: 34rpx;
    background-color: #dfdfdf;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
}

.plan_createtime {
    font-size: 36rpx;
    line-height: 2em;
}

.plan_text {
    font-size: 36rpx;
    line-height: 1.6em;
    text-indent: 2em;
    text-align: justify;
}

.plan_operate {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
}

.plan_edit, .plan_delete {
    box-sizing: border-box;
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    color: #333;
    background-color: #91b5c7;
}

.plan_delete {
    border-left: 1rpx solid #aaa;
    background-color: #ddd;
    color: #555;
}