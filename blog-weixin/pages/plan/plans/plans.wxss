/* pages/plan/plans/plans.wxss */

.header_slot {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    left: 50%;
    bottom: 20rpx;
    transform: translateX(-50%);
    color: #fff;
    font-size: 32rpx;
}

.plans_state {
    font-size: 36rpx;
}

.header_bottom {
    margin-top: 30rpx;
    display: flex;
    align-items: center;
}

.month_icon {
    width: 50rpx;
    height: 50rpx;
    background-size: 100% 100%;
}

.plans_date {
    width: auto;
    height: 100%;
    padding: 0 140rpx;
    box-sizing: border-box;
    white-space: nowrap;
}

.plan_list {
    padding-bottom: 100rpx;
}

.plan_list_item {
    margin-top: 30rpx;
    padding-left: 30rpx;
}

.list_day {
    display: flex;
    margin-bottom: 28rpx;
    font-size: 40rpx;
}

.list_day::before {
    content: "";
    display: inline-block;
    width: 16rpx;
    height: 16rpx;
    margin-top: 20rpx;
    margin-right: 20rpx;
    border-radius: 8rpx;
    background-color: #22ac38;
}

.plan_list_day {
    width: 100%;
    height: 440rpx;
    white-space: nowrap;
}

.plan_item {
    width: 450rpx;
    height: 420rpx;
    margin-bottom: 20rpx;
    margin-left: 36rpx;
    box-shadow: 4rpx 24rpx 20rpx #aaa;
    white-space: normal;
    display: inline-flex;
    flex-direction: column;
}

.plan_item:nth-last-of-type(1) {
    margin-right: 216rpx;
    position: relative;
}

.plan_top {
    flex-grow: 1;
    padding: 20rpx 26rpx;
    padding-bottom: none;
    box-sizing: border-box;
    background-color: rgba(0, 0, 0, 0.6);
    color: #fff;
    border-radius: 8rpx 8rpx 0 0;
}

.plan_title {
    padding-bottom: 8rpx;
    margin-bottom: 12rpx;
    border-bottom: 2rpx solid #91b5c7;
    font-size: 36rpx;
    font-weight: bold;
}

.plan_status {
    height: 36rpx;
    padding: 8rpx 30rpx 4rpx 12rpx;
    margin-top: 20rpx;
    margin-left: 8rpx;
    display: inline-block;
    font-size: 26rpx;
    position: relative;
    color: #888;
}

.plan_status::after {
    content: "";
    white-space: nowrap;
    position: absolute;
    top: 8rpx;
    left: 108rpx;
    width: 34rpx;
    height: 34rpx;
    background-color: #555;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
}

.plan_content {
    width: 100%;
    height: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    font-size: 32rpx;
    text-indent: 2em;
    text-align: justify;
}

.plan_item:nth-last-of-type(1)::after {
    content: "再滑动也没有了~";
    width: 150rpx;
    height: 400rpx;
    margin-right: 36rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 486rpx;
    color: #aaa;
}

.plan_bottom {
    width: 100%;
    height: 82rpx;
    padding: 24rpx 14rpx;
    box-sizing: border-box;
    background-color: #fff;
    font-size: 30rpx;
    color: #888;
}

.bottom_nav {
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    position: fixed;
    bottom: 0;
    background-color: #fff;
}

.nav_item {
    height: 100%;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    color: #666;
}

.nav_item_icon {
    width: 50rpx;
    height: 50rpx;
    background-size: 100% 100%;
}

.plan_empty {
    width: 100%;
    margin-top: 60rpx;
    margin-bottom: 30rpx;
    text-align: center;
    font-size: 28rpx;
    color: #666;
}