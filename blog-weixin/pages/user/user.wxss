/* pages/user/user.wxss */
.header{
    width: 100%;
    height: 660rpx;
    position: relative;
}
.back_icon{
    width: 70rpx;
    height: 70rpx;
    position: absolute;
    top: 65rpx;
    left: 30rpx;
}
.header_bgi {
    width: 100%;
    height: 100%;
}
.user{
    width: 100%;
    height: auto;
    margin-bottom: 60rpx;
    padding-top: 75rpx;
    position: relative;
}
.user_head_box{
    width: 240rpx;
    height: 240rpx;
    padding: 10rpx;
    box-sizing: border-box;
    border-radius: 120rpx;
    background-color: #fff;
    position: absolute;
    top: -190rpx;
    left: 50%;
    transform: translateX(-50%);
}
.user_head{
    width: 220rpx;
    height: 220rpx;
    border-radius: 110rpx;
    overflow: hidden;
}
.user_information{
    height: 290rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.user_name{
    font-size: 70rpx;
    color: #444;
    margin-bottom: 30rpx;
}
.user_dec{
    padding: 0 86rpx;
    text-indent: 2rem;
    font-size: 32rpx;
    color: #808080;
    line-height: 1.5rem;
}
.show_bighead{
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.3);
    position: fixed;
    z-index: 100;
}
.bighead_box{
    width: 100%;
    height: auto;
    position: inherit;
    top: 320rpx;
}
.bighead_image{
    width: 100%;
}
.nav_list {
    width: 100%;
    padding: 0 50rpx;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.nav_item {
    height: 80rpx;
    margin-bottom: 26rpx;
    padding: 0 20rpx;
    border-right: 1rpx solid #ccc;
    display: flex;
    align-items: center;
    font-size: 34rpx;
    color: #666;
}
.nav_item:nth-of-type(2), .nav_item:nth-of-type(5) {
    border-right: none;
}
.nav_item:nth-last-of-type(-n+3) {
    padding: 0 32rpx;
}
.nav_icon {
    width: 70rpx;
    height: 70rpx;
    margin-right: 10rpx;
}