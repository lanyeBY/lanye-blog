/* pages/user/setting/setting.wxss */
.setting_container {
    width: 100%;
    display: flex;
    flex-direction: column;
}
.setting_detail {
    margin-top: 30rpx;
    padding: 0 36rpx;
    width: 100%;
    box-sizing: border-box;
    flex-grow: 1;
    background-color: #fff;
}
.setting_item {
    width: 100%;
    height: 80rpx;
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.head {
    height: 144rpx;
}
.setting_text {
    font-size: 40rpx;
    color: #000;
}
.head_box {
    width: 144rpx;
    height: 144rpx;
    border-radius: 12rpx;
    overflow: hidden;
    background-color: #808080;
}
.head_image {
    width: 100%;
    height: 100%;
}
.name_text,.name_input, .introduction_text, .introduction_input {
    font-size: 36rpx;
    color: #868686;
}
.name_input {
    text-align: right;
    color: #333;
}
.introduction {
    height: auto;
    flex-direction: column;
    align-items: baseline;
}
.introduction_input, .introduction_text {
    font-size: 32rpx;
    margin-top: 20rpx;
    line-height: 1.5em;
}
.introduction_text {
    width: 100%;
    height: 300rpx;
}
.introduction_input {
    width: 100%;
    color: #333;
}
.confirm_button {
    margin-top: 60px;
    background-color: chocolate;
    display: flex;
    justify-content: center;
    align-items: center;
}